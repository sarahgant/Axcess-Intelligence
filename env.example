# CCH Axcess Intelligence - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=5000

# =============================================================================
# AI Providers
# =============================================================================
# Set your API keys (at least one is required)
VITE_ANTHROPIC_API_KEY=sk-ant-api03-...
VITE_OPENAI_API_KEY=sk-...

# Preferred AI provider (anthropic, openai, azure)
VITE_AI_PROVIDER=anthropic

# =============================================================================
# Security Configuration
# =============================================================================
# CORS origin for production
VITE_CORS_ORIGIN=http://localhost:5173

# Rate limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=60000

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
VITE_ENABLE_LOGGING=true
VITE_ENABLE_MONITORING=false
VITE_ENABLE_CACHE=true

# =============================================================================
# Performance Configuration
# =============================================================================
# File upload limits (in bytes)
VITE_MAX_FILE_SIZE=20971520

# Concurrent request limits
VITE_MAX_CONCURRENT_REQUESTS=5

# Cache TTL (in seconds)
VITE_CACHE_TTL=3600

# =============================================================================
# Development Configuration
# =============================================================================
# Debug mode
VITE_DEBUG=false

# =============================================================================
# Retry Configuration
# =============================================================================
# Retry settings for API calls
VITE_RETRY_MAX_ATTEMPTS=3
VITE_RETRY_INITIAL_DELAY=1000
VITE_RETRY_MAX_DELAY=10000

# =============================================================================
# Circuit Breaker Configuration
# =============================================================================
# Circuit breaker settings
VITE_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
VITE_CIRCUIT_BREAKER_RESET_TIMEOUT=60000
VITE_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2

# =============================================================================
# Production Notes
# =============================================================================
# For production deployment:
# 1. Set VITE_API_BASE_URL to your production API URL
# 2. Set VITE_CORS_ORIGIN to your production frontend URL
# 3. Ensure API keys are properly configured
# 4. Set VITE_ENABLE_MONITORING=true for production monitoring
# 5. Adjust rate limits and performance settings as needed
