# CCH Axcess Intelligence - Production Backend Configuration
# Copy this file to .env and update with your actual values

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com

# ==========================================
# AI PROVIDER CONFIGURATION (REQUIRED)
# ==========================================
# Note: NO VITE_ prefix needed - these stay secure on the server

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# OpenAI GPT API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-4

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Encryption key for session data (32+ characters)
ENCRYPTION_KEY=your_secure_encryption_key_here_32_chars_minimum

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_STREAMING=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_RAG_SEARCH=true
ENABLE_CHAT_HISTORY=true
ENABLE_DEBUG_MODE=false

# ==========================================
# RATE LIMITING & PERFORMANCE
# ==========================================
MAX_DOCUMENTS_PER_SESSION=10
MAX_CHAT_HISTORY_ENTRIES=100
DOCUMENT_RETENTION_HOURS=3
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# DATABASE (for production)
# ==========================================
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://host:port